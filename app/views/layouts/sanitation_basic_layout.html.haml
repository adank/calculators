%html.no-js{:lang => "en"}
  / <![endif]
  %head
    %meta{:charset => "utf-8"}/
    %title
      WASHCost Calculator - #{@title}
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/
    %meta{:content => "width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0", :name => "viewport"}/
    = javascript_include_tag "application-basic"
    = stylesheet_link_tag "application-basic", :media => "all"
  #outer_container.bgGradient
    = show_app_version
    = render "shared/header"
    = render "shared/nav_sanitation"
    .mainContent
      = yield
  %footer
    .footerWrapper
      %a{:href => "/cal/sanitation_basic/report"} Go to report page
      .progressBarWrapper
        %h2
          = t 'footer.footer_layout'
          %span= t 'footer.final_report'
        .progressBar
          .outerBar
            .innerBar{:style => "width:30%"}
            %p
              = flash[:percent_complete]
              #{t 'footer.complete'}
  :javascript
    window.I18n = #{I18n.backend.send(:translations).to_json.html_safe}
